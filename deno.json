{
  "name": "@dreamer/middlewares",
  "version": "1.0.2",
  "license": "Apache-2.0",
  "description": "兼容 Deno 和 Bun 的 HTTP 中间件库，可与 @dreamer/server 或 HttpContext 兼容框架无缝集成",
  "exports": {
    ".": "./src/mod.ts",
    "./body-parser": "./src/body-parser.ts",
    "./compression": "./src/compression.ts",
    "./cors": "./src/cors.ts",
    "./csrf": "./src/csrf.ts",
    "./error-handler": "./src/error-handler.ts",
    "./health-check": "./src/health-check.ts",
    "./metrics": "./src/metrics.ts",
    "./performance-analyzer": "./src/performance-analyzer.ts",
    "./rate-limit": "./src/rate-limit.ts",
    "./request-id": "./src/request-id.ts",
    "./request-logger": "./src/request-logger.ts",
    "./request-signature": "./src/request-signature.ts",
    "./request-validator": "./src/request-validator.ts",
    "./response-cache": "./src/response-cache.ts",
    "./security-headers": "./src/security-headers.ts",
    "./static-files": "./src/static-files.ts",
    "./timeout": "./src/timeout.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "src/**/*.json",
      "LICENSE",
      "NOTICE",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "imports": {
    "@dreamer/i18n": "jsr:@dreamer/i18n@^1.0.1",
    "@dreamer/server": "jsr:@dreamer/server@^1.0.8",
    "@dreamer/middleware": "jsr:@dreamer/middleware@^1.0.2",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.0",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.11",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.15",
    "brotli": "npm:brotli@1.3.3",
    "pako": "npm:pako@2.1.0"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom",
      "dom.iterable"
    ]
  }
}
